---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, date } = post.data;
---

<article class="mb-8">
  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 sm:gap-4 mb-2">
    <h2 class="text-lg sm:text-xl font-normal text-gray-900 dark:text-white">
      <a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {title}
      </a>
    </h2>
    <time datetime={date.toISOString()} class="hidden sm:block text-lg sm:text-xl text-amber-600 dark:text-amber-400 font-light whitespace-nowrap">
      {date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </div>
  <p class="text-gray-600 dark:text-gray-400 mb-2">{description}</p>
  <time datetime={date.toISOString()} class="sm:hidden block text-sm text-amber-600 dark:text-amber-400 font-light">
    {date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })}
  </time>
</article> 