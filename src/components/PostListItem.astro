---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, date } = post.data;
---

<article class="group">
  <div class="flex flex-col">
    <h2 class="text-xl font-serif text-slate-900 dark:text-slate-100 mb-2">
      <a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {title}
      </a>
    </h2>
    <p class="text-base leading-relaxed text-slate-600 dark:text-slate-400 mb-2 font-serif">
      {description}
    </p>
    <time datetime={date.toISOString()} class="text-sm font-normal text-slate-500 dark:text-slate-400">
      {date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </div>
</article> 