---
import '../styles/global.css';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Not So Common Thoughts - A blog about technology, AI, and more" } = Astro.props;

// Get all categories from posts
const posts = await getCollection('blog');
const categories = new Set(posts.flatMap(post => post.data.tags || []));

// Format category names for display and count posts
const formattedCategories = Array.from(categories).map(category => ({
  slug: category,
  name: category
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' '),
  count: posts.filter(post => (post.data.tags || []).includes(category)).length
}));

// Get current path for highlighting active link
const currentPath = Astro.url.pathname;
const isHome = currentPath === '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-900 dark:bg-slate-50">
    <div class="flex min-h-screen">
      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="sm:hidden fixed top-6 right-6 z-50 p-2 rounded-md text-white dark:text-slate-900 hover:text-red-400 dark:hover:text-red-600 focus:outline-none bg-slate-900 dark:bg-white"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Sidebar -->
      <aside id="sidebar" class="fixed sm:fixed sm:top-0 w-64 min-h-screen p-8 overflow-y-auto transform -translate-x-full sm:translate-x-0 transition-transform duration-200 ease-in-out z-20 bg-slate-900 dark:bg-slate-50">
        <div class="mb-8">
          <h1 class="text-4xl font-sans font-bold">
            <a href="/" class="hover:text-red-400 dark:hover:text-red-600 transition-colors font-outfit embossed text-white dark:text-slate-900">
              {title}
            </a>
          </h1>
        </div>

        <nav class="space-y-2">
          <ul class="space-y-2">
            <li>
              <a
                href="/"
                class:list={[
                  'block text-sm font-serif flex justify-between items-center',
                  currentPath === '/'
                    ? 'text-red-400 dark:text-red-600'
                    : 'text-slate-300 dark:text-slate-600 hover:text-red-400 dark:hover:text-red-600'
                ]}
              >
                <span>Home</span>
              </a>
            </li>
            {formattedCategories.map(category => (
              <li>
                <a
                  href={`/${category.slug}`}
                  class:list={[
                    'block text-sm font-serif flex justify-between items-center',
                    currentPath === `/${category.slug}`
                      ? 'text-red-400 dark:text-red-600'
                      : 'text-slate-300 dark:text-slate-600 hover:text-red-400 dark:hover:text-red-600'
                  ]}
                >
                  <span>{category.name}</span>
                  <span class="text-xs text-slate-400 dark:text-slate-500">{category.count}</span>
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </aside>

      <!-- Main Content and Footer Container -->
      <div class="flex-1 sm:ml-64 flex flex-col min-h-screen">
        <!-- Main Content -->
        <main class="flex-1">
          <div class="bg-white dark:bg-slate-900 rounded-bl-3xl shadow-lg">
            <slot />
          </div>
        </main>

        <!-- Footer -->
        <footer class="px-8 py-4">
          <div class="max-w-7xl mx-auto">
            <div class="flex justify-between items-center">
              <p class="text-xs text-slate-400 dark:text-slate-600 font-serif">
                Â© {new Date().getFullYear()} {title} by <a href="https://kohlhofer.com/about" class="text-red-400 dark:text-red-600 hover:text-red-300 dark:hover:text-red-700 transition-colors">A. Kohlhofer</a>. All rights reserved.
              </p>
              <a href="/rss.xml" class="text-red-400 dark:text-red-600 hover:text-red-300 dark:hover:text-red-700 transition-colors">RSS</a>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <script>
      // Mobile menu functionality
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('sidebar');
      let isMenuOpen = false;

      function toggleMenu() {
        isMenuOpen = !isMenuOpen;
        sidebar.style.transform = isMenuOpen ? 'translateX(0)' : 'translateX(-100%)';
      }

      function handleResize() {
        // If we're on desktop (sm breakpoint and above), ensure sidebar is visible
        if (window.innerWidth >= 640) { // 640px is Tailwind's sm breakpoint
          sidebar.style.transform = 'translateX(0)';
          isMenuOpen = false;
        } else {
          // On mobile, ensure sidebar is hidden unless menu is open
          sidebar.style.transform = isMenuOpen ? 'translateX(0)' : 'translateX(-100%)';
        }
      }

      mobileMenuButton.addEventListener('click', toggleMenu);

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (isMenuOpen && !sidebar.contains(e.target) && !mobileMenuButton.contains(e.target)) {
          toggleMenu();
        }
      });

      // Close menu when clicking a link
      const sidebarLinks = sidebar.querySelectorAll('a');
      sidebarLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (isMenuOpen) {
            toggleMenu();
          }
        });
      });

      // Handle window resize
      window.addEventListener('resize', handleResize);
      // Initial check
      handleResize();
    </script>
  </body>
</html> 