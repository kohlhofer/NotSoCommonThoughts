---
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Page not found - Not So Common Thoughts" />
    <title>404 - Page Not Found</title>
    <style>
      html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
      }
      .page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #0f172a; /* slate-900 */
      }
      .error-code {
        font-size: 6rem;
        font-weight: bold;
        color: white;
        margin-bottom: 0.5rem;
      }
      .error-message {
        font-size: 1.25rem;
        color: #94a3b8; /* slate-400 */
        margin-bottom: 2rem;
        text-align: center;
      }
      .site-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: white;
        margin-bottom: 2rem;
      }
      .site-title:hover {
        color: #f87171; /* red-400 */
      }
      .button-container {
        display: flex;
        gap: 1rem;
      }
      .button-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background-color: #ef4444; /* red-500 */
        color: white;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: background-color 0.2s;
      }
      .button-primary:hover {
        background-color: #dc2626; /* red-600 */
      }
      .button-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background-color: #334155; /* slate-700 */
        color: white;
        border-radius: 0.375rem;
        font-weight: 500;
        transition: background-color 0.2s;
      }
      .button-secondary:hover {
        background-color: #475569; /* slate-600 */
      }
      .icon {
        width: 1.25rem;
        height: 1.25rem;
      }
    </style>
  </head>
  <body>
    <div class="page-container">
      <a href="/" class="site-title font-sans font-bold font-outfit embossed bg-gradient-to-r from-red-400 via-pink-500 to-purple-500 bg-clip-text text-transparent hover:text-red-400 transition-colors">Not So Common Thoughts</a>
      <div class="error-code">404</div>
      <div class="error-message">Oops! The page you're looking for doesn't exist.</div>
      <div class="button-container">
        <a href="/" class="button-primary">
          <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
          Home
        </a>
        <button onclick="history.back()" class="button-secondary">
          <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Go Back
        </button>
      </div>
    </div>
    <script>
      // Check for saved theme preference or use system preference
      const savedTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </body>
</html> 